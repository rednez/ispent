generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Currency {
  id           Int            @id @default(autoincrement())
  userId       String
  name         String         @db.VarChar(3)
  Operation    Operation[]
  BudgetRecord BudgetRecord[]
}

model Group {
  id           Int            @id @default(autoincrement())
  userId       String
  name         String
  color        String
  Category     Category[]
  Operation    Operation[]
  BudgetRecord BudgetRecord[]
}

model Category {
  id           Int            @id @default(autoincrement())
  userId       String
  name         String
  color        String
  group        Group          @relation(fields: [groupId], references: [id])
  groupId      Int
  Operation    Operation[]
  BudgetRecord BudgetRecord[]
}

model Operation {
  id                   Int      @id @default(autoincrement())
  userId               String
  amount               Float
  dateTime             DateTime @default(now())
  currency             Currency @relation(fields: [currencyId], references: [id])
  currencyId           Int
  category             Category @relation(fields: [categoryId], references: [id])
  categoryId           Int
  group                Group    @relation(fields: [groupId], references: [id])
  groupId              Int
  withdrawalAmount     Float?
  withdrawalCurrencyId Int?
  comment              String?  @db.VarChar(128)
}

model BudgetRecord {
  id         Int      @id @default(autoincrement())
  userId     String
  amount     Float
  currency   Currency @relation(fields: [currencyId], references: [id])
  currencyId Int
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  group      Group    @relation(fields: [groupId], references: [id])
  groupId    Int
  dateTime   DateTime @default(now())
}
